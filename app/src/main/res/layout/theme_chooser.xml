<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_title_theme_chooser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/color_time_date"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_view" />

    <TextView
        android:id="@+id/title_theme_chooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        android:layout_gravity="center"
        android:text="@string/choose_theme_of_application"
        android:textColor="@color/set_text_toast"
        android:textSize="@dimen/title_text_size_theme_shooser" />

</LinearLayout>